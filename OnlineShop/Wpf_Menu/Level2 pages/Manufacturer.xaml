<Page x:Class="Wpf_Menu.Manufacturer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Wpf_Menu"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Manufacturer">

    <Grid UseLayoutRounding="False" Background="White">
        <Label Content="Производители товаров" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button x:Name="AddManufacturer" Content="Add&#xA;Manufacturer" Margin="635,23,0,0" Click="Button_Click_AddManuracturer" VerticalAlignment="Top"/>
        <Button x:Name="ShowAllManufacturer" Content="Show all&#xA;Manufacturers"  Margin="150,23,0,0" Click="Button_Click_ShowAllManufacturer" VerticalAlignment="Top" />
        <ListBox x:Name="AllManufacturesListBox" Margin="10,71,293,25" Background="#FFB7B1B1"/>
        <Label Content="ManufacturerName" HorizontalAlignment="Left" Margin="607,143,0,0" VerticalAlignment="Top"/>
        <Label Content="ManufacturerEDRPOU" HorizontalAlignment="Left" Margin="600,222,0,0" VerticalAlignment="Top"/>
        <Label Content="ManufacturerID" HorizontalAlignment="Left" Margin="607,76,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="ManufacturerID" HorizontalAlignment="Left" Margin="555,102,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="197" Height="23" TextChanged="ManufacturerID_TextChanged"/>
        <TextBox x:Name="ManufacturerName" HorizontalAlignment="Left" Margin="555,174,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="197" Height="23"/>
        <TextBox x:Name="ManufacturerEDRPOU" HorizontalAlignment="Left" Margin="555,248,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="197" Height="23" TextChanged="TextBox_TextChanged"/>

    </Grid>
</Page>
